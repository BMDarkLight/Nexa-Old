# -------- Stage 1: Build --------
FROM node:20-slim AS builder
WORKDIR /app

ENV NEXT_TELEMETRY_DISABLED=1

COPY web/package.json web/package-lock.json ./web/

WORKDIR /app/web
RUN npm ci

COPY web .

# Build arguments for build-time environment variables
ARG NEXT_PUBLIC_SERVER_URL
ARG NEXT_PUBLIC_API_PORT
ARG NEXT_PUBLIC_UI_PORT

# Set environment variables for build
ENV NEXT_PUBLIC_SERVER_URL=$NEXT_PUBLIC_SERVER_URL
ENV NEXT_PUBLIC_API_PORT=$NEXT_PUBLIC_API_PORT
ENV NEXT_PUBLIC_UI_PORT=$NEXT_PUBLIC_UI_PORT

RUN npm run build

# -------- Stage 2: Production --------
FROM node:20-slim AS runner
WORKDIR /app/web

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

ENV UI_PORT=80

RUN addgroup --system --gid 1001 nodejs \
    && adduser --system --uid 1001 nextjs

COPY --from=builder /app/web/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/web/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/web/.next/static ./.next/static
COPY --from=builder /app/web/scripts ./scripts

USER nextjs

EXPOSE ${UI_PORT}

CMD ["sh", "-c", "node scripts/load-env.js && PORT=$UI_PORT node server.js"]